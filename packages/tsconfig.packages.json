{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "CommonJS",
    "composite": true,
    "types": [],
    "target": "ES2018",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "declaration": true
  },
  "exclude": ["**/node_modules/**"]
}
